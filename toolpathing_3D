from data_structures_3D import Vec3D, Line3D, Helix3D

import matplotlib.pyplot as plt
import numpy as np

def draw_line_3D(x0: int, y0: int, z0: int, x1: int, y1: int, z1: int):

    v0 = Vec3D(x0, y0, z0)
    v1 = Vec3D(x1, y1, z1)
    line = Line3D(v0, v1)

    return line


def draw_helix_3D(radius: float, turns: float, height: float, x_center: int, y_center: int):

    center = Vec3D(x_center, y_center)
    helix = Helix3D(radius, turns, height, center)

    return helix

def draw_curves_3D(curves: list):

    for curve in curves:
        t_values = np.linspace(0, 1, 100) #this is basically the resolution of the drawing
        x_values = [curve.parametric(t).x for t in t_values]
        y_values = [curve.parametric(t).y for t in t_values]
        z_values = [curve.parametric(t).z for t in t_values]

        if isinstance(curve, Line3D):
            plt.plot(x_values, y_values, z_values, color='blue')
        elif isinstance(curve, Helix3D):
            plt.plot(x_values, y_values, z_values, color='red')

    plt.xlabel("X")
    plt.ylabel("Y")
    plt.xlabel("Z")
    plt.title("3D Plot")
    plt.legend()
    plt.grid(True)
    plt.axis('equal')
    plt.show()


curves = []

curves.append(draw_helix_3D(4, 5, 10, 0, 0))
#curves.append(draw_line_3D(2, 3, 5, 5, 5))

draw_curves_3D(curves)